# custom-shader = shaders/cursor_blaze_tapered.glsl
custom-shader = shaders/cursor_frozen.glsl
# custom-shader = shaders/cursor_smear.glsl
# custom-shader = shaders/cursor_smear_fade.glsl
# custom-shader = shaders/manga_slash.glsl

font-family = ""
font-family = "MesloLGS Nerd Font"
font-family = "Apple SD Gothic Neo"  # fallback
font-family = "PCMyungjo Regular"

font-size = 11
font-thicken = true
font-thicken-strength = 10
theme = Catppuccin Frappe
cursor-style = block
background-opacity = 0.9

# Paddings
window-padding-x = 2, 2
window-padding-y = 2, 2


# keybindings
keybind = ctrl+shift+s>r=reload_config
keybind = ctrl+shift+s>x=close_surface

keybind = ctrl+shift+s>n=new_window


#tabs
keybind = ctrl+shift+s>c=new_tab
keybind = ctrl+shift+s>shift+l=next_tab
keybind = ctrl+shift+s>shift+h=previous_tab
keybind = ctrl+shift+s>comma=move_tab:-1
keybind = ctrl+shift+s>period=move_tab:1

#quick tab switch
keybind = ctrl+shift+s>1=goto_tab:1
keybind = ctrl+shift+s>2=goto_tab:2
keybind = ctrl+shift+s>3=goto_tab:3
keybind = ctrl+shift+s>4=goto_tab:4
